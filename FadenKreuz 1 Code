import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class fadenKreuz here.
 * 
 * @author (Eric) 
 * @version (19.02.2026)
 */
public class fadenKreuz1 extends Actor
{
    /**
     * Das Fadenkreuz Bewgt sich nach oben, unten, links, rechts eskolidirt nicht mit gegenst√§nde
     * und dient zum zilen der projektiele
     */
    public void act()
    {
        //Fadenkreuz nach oben bewegen
        if(Greenfoot.isKeyDown("i"))
        {
            setLocation(getX(), getY() -4);
        }
        //Fadenkreuz nach unten bewegen
        if(Greenfoot.isKeyDown("k"))
        {
            setLocation(getX(), getY() +4);
        }
        //Fadenkreuz nach Links bewegen
        if(Greenfoot.isKeyDown("j"))
        {
            setLocation(getX() -4, getY());
        }
        //Fadenkreuz nach Rechts bewegen
        if(Greenfoot.isKeyDown("l"))
        {
            setLocation(getX() +4, getY());
        }
    }
}
