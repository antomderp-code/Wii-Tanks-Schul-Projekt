    public void act()
    { 
        moveWithoutOverlap();
    }
  public void moveWithoutOverlap() {
    // 1. Position und Rotation merken
    int oldX = getX();
    int oldY = getY();
    int oldRotation = getRotation();

    // 2. Die Steuerung
    if (Greenfoot.isKeyDown("8")) {
        move(2);
    }
    if (Greenfoot.isKeyDown("5")) {
        move(-2);
    }
    if (Greenfoot.isKeyDown("4")) {
        turn(-3);
    }
    if (Greenfoot.isKeyDown("6")) {
        turn(3);
    }

    // 3. Prüfen: Ob in einer Wand
    if (isTouching(wall.class)) {
        // if ja: Alles sofort rückgängig machen
        setLocation(oldX, oldY);
        setRotation(oldRotation);
    }
 if (isTouching(wallHorizontal.class)) {
        // Falls ja: Alles sofort rückgängig machen!
        setLocation(oldX, oldY);
        setRotation(oldRotation);
    } 
    if (isTouching(wallVertikal.class)) {
        // Falls ja: Alles sofort rückgängig machen!
        setLocation(oldX, oldY);
        setRotation(oldRotation);
    }
}
